#!/usr/bin/env python3
"""
CLI launcher for the mypacman project. Place at repo root and make executable.

Usage:
  ./mypacman-cli
  python3 mypacman-cli
"""
import os
import sys
import runpy

ROOT = os.path.dirname(__file__)
# Add 'src' to sys.path so imports like 'src.mypacman' work during execution/tests
SRC_ROOT = os.path.join(ROOT, 'src')
if SRC_ROOT not in sys.path:
    sys.path.insert(0, SRC_ROOT)

try:
    runpy.run_module('src.mypacman.main', run_name='__main__')
except Exception as exc:
    print(f"Error launching game: {exc}", file=sys.stderr)
    sys.exit(1)
